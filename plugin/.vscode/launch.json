            "cwd": "${workspaceFolder}/../sample",
            "program": "${workspaceFolder}/node_modules/@babel/cli/bin/babel.js",
            "args": ["${workspaceFolder}/../sample/src", "--out-dir", "bbl", "--extensions", ".ts,.tsx"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
